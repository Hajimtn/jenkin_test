def appname = "Runner" // This refers to the flutter 'Runner' target.
def xcarchive = "${appname}.xcarchive"

pipeline {
    agent {
        label 'built-in'
    }
    stages {
        stage ('Checkout') {
            steps {
                checkout scm
            }
        }
        stage ('Add version fvm flutter') {
            steps {
                bat 'fvm use 3.29.3'
            }
        }
        stage ('Run Flutter Clean') {
            steps {
                bat 'fvm flutter clean'
            }
        }
        stage ('Change version') {
            steps {
                sh '''
                sed -i '' "s/^version: .*/version: ${VERSION}/" pubspec.yaml
                '''
            }
        }
        stage ('Run Flutter Verify') {
            steps {
                bat "fvm flutter pub get"
            }
        }
        stage('Build and Deploy Android') {
            steps {
                bat 'fvm flutter build apk --flavor "${ENV}" -t lib/main_"${ENV}".dart'
                bat 'firebase  appdistribution:distribute build/app/outputs/flutter-apk/app-"${ENV}"-release.apk  --token "${FIREBASE_TOKEN}"  --app "${FIREBASE_APP}"  --groups "${TEST_GROUP}"  --release-notes "Upload APK to Firebase"'
            }
        }
        stage('Cleanup') {
            steps {
                bat "fvm flutter clean"
            }
        }
    }

}